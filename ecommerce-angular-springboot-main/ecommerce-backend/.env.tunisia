# =====================================================
# Configuration Environnement - Tunisia E-Commerce
# =====================================================

# DATABASE
DB_USER=postgres
DB_PASSWORD=postgres_secure_2024
DB_HOST=localhost
DB_PORT=5432

# Bases de données
DB_USERS=ecommerce_users_tn
DB_PRODUCTS=ecommerce_products_tn
DB_ORDERS=ecommerce_orders_tn
DB_PAYMENTS=ecommerce_payments_tn

# REDIS
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# PGADMIN
PGADMIN_EMAIL=admin@maisontn.com
PGADMIN_PASSWORD=admin123

# APPLICATION
APP_NAME=Maison Tunisie E-Commerce
APP_ENV=production
APP_URL=https://maisontn.com
APP_TIMEZONE=Africa/Tunis
APP_LOCALE=fr_TN

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=86400000

# CURRENCY
CURRENCY=TND
CURRENCY_SYMBOL=د.ت
CURRENCY_DECIMAL_PLACES=3

# SHIPPING
DEFAULT_SHIPPING_FEE_TND=7.000
FREE_SHIPPING_THRESHOLD_TND=200.000
EXPRESS_SHIPPING_FEE_TND=15.000

# TAX
TAX_RATE=0.00
TAX_ENABLED=false

# PAYMENT GATEWAYS TUNISIA
# D17
D17_API_KEY=your_d17_api_key
D17_API_SECRET=your_d17_api_secret
D17_ENABLED=true

# Konnect
KONNECT_API_KEY=your_konnect_api_key
KONNECT_WALLET_ID=your_konnect_wallet_id
KONNECT_ENABLED=true

# Flouci
FLOUCI_APP_TOKEN=your_flouci_app_token
FLOUCI_APP_SECRET=your_flouci_app_secret
FLOUCI_ENABLED=true

# ClickToPay (SMT)
CLICTOPAY_AFFILIATE_CODE=your_affiliate_code
CLICTOPAY_USERNAME=your_username
CLICTOPAY_PASSWORD=your_password
CLICTOPAY_ENABLED=false

# Cash on Delivery
COD_ENABLED=true
COD_MAX_AMOUNT_TND=2000.000

# EMAIL
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=contact@maisontn.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_NAME=Maison Tunisie
MAIL_FROM_ADDRESS=noreply@maisontn.com

# SMS TUNISIA
SMS_PROVIDER=tunisisms
SMS_API_KEY=your_sms_api_key
SMS_SENDER_NAME=MaisonTN

# STORAGE
STORAGE_DRIVER=local
UPLOAD_MAX_SIZE=10485760

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://maisontn.com
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# MONITORING
MONITORING_ENABLED=true
METRICS_ENABLED=true

# CACHE
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# RATE LIMITING
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
